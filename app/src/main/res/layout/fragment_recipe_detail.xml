<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ingredients_title_tv"
        style="@style/detailTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ingredients_title"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/horizontal_margin"
        android:src="@drawable/ic_keyboard_arrow_down_white_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:tint="@color/colorPrimaryDark"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ingredient_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_padding"
        android:layout_below="@id/ingredients_title_tv"/>

    <TextView
        android:id="@+id/directions_title_tv"
        style="@style/detailTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/steps_title"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/horizontal_margin"
        android:src="@drawable/ic_keyboard_arrow_up_white_24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:tint="@color/colorPrimaryDark"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recipe_step_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/directions_title_tv"
        android:visibility="gone"/>

</RelativeLayout>