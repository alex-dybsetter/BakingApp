<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="recipeTitle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/recipe_title</item>
        <item name="android:layout_marginBottom">@dimen/small_padding</item>
    </style>

    <style name="plainText">
        <item name="android:textSize">@dimen/base_text</item>
    </style>

    <style name="card_buttons">
        <item name="android:tint">@color/colorAccent</item>
        <item name="android:background">@color/cardview_light_background</item>
        <item name="android:paddingLeft">@dimen/small_padding</item>
    </style>

    <style name="nav_buttons">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:layout_margin">@dimen/horizontal_margin</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="detailTitle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textSize">@dimen/detail_title</item>
        <item name="android:paddingLeft">@dimen/horizontal_margin</item>
        <item name="android:paddingRight">@dimen/horizontal_margin</item>
        <item name="android:paddingTop">@dimen/vertical_margin</item>
        <item name="android:paddingBottom">@dimen/vertical_margin</item>
    </style>

    <style name="stepTitle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/step_title</item>
    </style>

    <style name="widgetTitle" parent="recipeTitle">
        <item name="android:textSize">@dimen/widget_title_text_size</item>
        <item name="android:paddingLeft">@dimen/widget_margin</item>
        <item name="android:paddingRight">@dimen/widget_margin</item>
        <item name="android:paddingTop">@dimen/widget_margin_small</item>
        <item name="android:paddingBottom">@dimen/widget_margin_small</item>
        <item name="android:layout_margin">@dimen/zero</item>
    </style>

    <style name="widgetSubtitle" parent="stepTitle">
        <item name="android:textSize">@dimen/widget_subtitle_text_size</item>
        <item name="android:layout_marginLeft">@dimen/widget_margin</item>
        <item name="android:layout_marginRight">@dimen/widget_margin</item>
        <item name="android:layout_marginBottom">@dimen/widget_margin</item>
    </style>

    <style name="widgetBtn">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginRight">@dimen/widget_margin</item>
    </style>

</resources>
