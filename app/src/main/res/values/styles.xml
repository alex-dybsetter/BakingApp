<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="recipeTitle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/recipe_title</item>
        <item name="android:layout_marginBottom">@dimen/small_padding</item>
    </style>

    <style name="servingsSubtitle">
        <item name="android:textSize">@dimen/base_text</item>
    </style>

    <style name="buttons">
        <item name="android:tint">@color/colorAccent</item>
        <item name="android:paddingLeft">@dimen/small_padding</item>
    </style>

    <style name="detailTitle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textSize">@dimen/detail_title</item>
        <item name="android:paddingLeft">@dimen/horizontal_margin</item>
        <item name="android:paddingRight">@dimen/horizontal_margin</item>
        <item name="android:paddingTop">@dimen/vertical_margin</item>
        <item name="android:paddingBottom">@dimen/vertical_margin</item>
    </style>

</resources>
